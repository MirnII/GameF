<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MATCH_3._3.Resources">
    <Style x:Key="style">
        <Setter Property="Control.FontFamily" Value="pack://application:,,,/Fonts/#Xtrusion (BRK)"/>
        <Setter Property="Control.FontSize" Value="48"/>
    </Style>
    <Style x:Key="butstyle" TargetType="Button">
        <Setter Property="Control.Background" Value="Khaki"/>
        <Setter Property="Control.BorderBrush" Value="Wheat"/>
        <Setter Property="Control.Foreground" Value="Red"/>
        <Setter Property="Control.BorderThickness" Value="2"/>
    </Style>
</ResourceDictionary>